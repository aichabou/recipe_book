{% extends 'base.html.twig' %}

{% block body %}
    <section class="work-section" id="portfolio">
        <h2 class="section-title">Bienvenue sur mon blog des recettes !</h2>
        
        {# Bouton d'ajout de recette (affich√© uniquement pour l'administrateur) #}
        {% if is_granted('ROLE_ADMIN') %}
            <div>
                <a href="{{ path('app_recipe') }}" class="button">Ajouter une recette</a>
            </div>

        {% endif %}

        <div class="work-back">
            <div class="work__container bd-grid">
                {% for recipe in recipes %}
                    <div class="work__img">
                        <a href="{{ path('app_recipe_id', {'name': recipe.name}) }}">
                            {% if recipe.image %}
                                <img src="{{ asset('uploads/images/' ~ recipe.image) }}" alt="{{ recipe.name }}">
                            {% endif %}
                            <h3>{{ recipe.name }}</h3>
                            <div class="focus-content">
                                <!-- Add any additional content or details if needed -->
                            </div>
                        </a>
                        <p>{{ recipe.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
