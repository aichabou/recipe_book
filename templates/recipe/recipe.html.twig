{% extends 'base.html.twig' %}

{% block title %}Nouvelle recette{% endblock %}
{% block meta_description %}Ajoutez une nouvelle recette !{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="section-title">Ajouter une recette</h2>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name, 'Nom de la recette') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de la recette'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la description'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.ingredients, 'Ingrédients') }}
            {{ form_widget(form.ingredients, {'attr': {'class': 'form-control', 'placeholder': 'Listez les ingrédients'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.instructions, 'Instructions') }}
            {{ form_widget(form.instructions, {'attr': {'class': 'form-control', 'placeholder': 'Entrez les instructions'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image, 'Image') }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
        </div>
        <button type="submit" class="button">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
